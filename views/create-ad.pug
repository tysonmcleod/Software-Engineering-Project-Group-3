extends layout

block content
    h1 Create advertisement
    form(method= 'POST', action='send-ad')
      #form-group
        label From:
        input.form-control(name='from', type='text', placeholder='from')
        br
      #form-group
        label To:
        input.form-control(name='to', type='text', placeholder='to')
      br
      #form-group
        label Date:
        input.form-control(name='date', type='date')
      br
      #form-group
        label Username:
        input.form-control(name='driver', type='text', placeholder='username')
      br
      #form-group
        label Available seats:
        input.form-control(name='available_seats', type='number', placeholder='0')
      br
      #form-group
        label Leaving:
        input.form-control(name='departure', type='time')
      br
      #form-group
        label Arriving:
        input.form-control(name='arrival', type='time')
      br
      input.btn.btn.primary(type='submit', value='Add ride')