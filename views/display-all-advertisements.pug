extends layout

block content
	#ridePage

		div(data-objData=data)

		h1 Search advertisements

		form(method= 'GET', action='/rides')

			#form-group

			input.form-control(name='from', type='text', value=filter.from, placeholder='From')

			#form-group

			input.form-control(name='to', type='text', value=filter.to, placeholder='To')
			#ridePageDate
				input.form-control(name='date', type='date', value=filter.date)

			#ridePageButton
				input.btn.btn-secondary.bt-lg.btn-block(type='submit', value='Search')
		br
		if data
			each ad, i in data
				a(href='/rides/show-ads/'+ad.id) #{"Result " + i + ": "}
				p= "From: " + ad.from + ", To: " + ad.to + ", Available seats:" + ad.available_seats  + ", Date: " + ad.date + ", Departure: " + ad.departure + ", Arrival: " + ad.arrival
				br
