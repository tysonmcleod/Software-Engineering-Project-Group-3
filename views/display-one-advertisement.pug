extends layout

block content

	div#dataObject(data-objData=data)
	input#dataobj(type='hidden', value=data)

	#createadPage
		#createdadPageForm
			#createForm
				#form-group
				.row
					.col-6
						p= "From: " + data.from
					.col-6
						p= "To: " + data.to
				.row
						.col-6
							p= "Departure: " + data.departure
						.col-6
							p= "Arriving: " + data.arrival
				.row
					.col-6
						p= "Available seats:" + data.available_seats
					.col-6
						p Driver: #[a.mngOneAd(href='/users/profile/'+data.driver+'/'+data.id+'/false') #{data.driver}]
				.row
					.col
						if data.confirmed_riders
							p="Riders: "
							for rider in data.confirmed_riders
								a.mngOneAd(href='/users/profile/' + rider + '/' + data.id + '/false') #{rider}
								span=" "
					.col
						p="Date: " + data.date
				.row
					.col
						p="Pick-up and delivery zone: " + data.radius*100 + " km"
					.col
						p="Price: " + data.price + " SEK"

		script(type='text/javascript', src='/javascripts/map.js')
		script(async, defer, type='text/javascript', src=`https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=showRoute`)
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

		div(id='map')
