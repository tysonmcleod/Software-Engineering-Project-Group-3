extends layout

block content

	div(data-objData=data)
	#createadPage
		h1="Confirmed rides"
		#updateConfirmedRider
			if data
				#createForm
				-var index=0
					each ad in data
						each rider in ad.confirmed_riders
							#form-group
								if rider == username
									.row
										.col
											.row
												p= "From: " + ad.from
											.row
												p="To: " + ad.to
											.row
												p=" Date: " + ad.date
										.col
											.row
												p="Departure: " + ad.departure 
											.row
												p="Arrival: " + ad.arrival
											.row
												p="Driver: " + ad.driver
										.col
											.row
												a.btn.btn-secondary.bt-lg.btn-block(href="show-ads/"+ad.id) Advertisement
											br
											.row
												a.btn.btn-secondary.bt-lg.btn-block(href="hop-off-ride/"+ad.id) Remove request


	#createadPage
		h1="Pending rides"
		if data
			#createForm
				-var index=0
				each ad in data
					each rider in ad.interested_riders
						#form-group
							
							if rider == username
								.row
									.col
										p= "From: " + ad.from
									.col
										p="To: " + ad.to
									.col
										p=" Date: " + ad.date
								br
								.row
									.col
										p="Departure: " + ad.departure 
									.col
										p="Arrival: " + ad.arrival
									.col
										p="Available seats: " + ad.available_seats
									.col
										a.btn.btn-secondary.bt-lg.btn-block(href="hop-off-ride/"+ad.id) Remove request