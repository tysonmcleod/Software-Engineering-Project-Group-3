extends layout

block content
	h1 THE ad

	div(data-objData=data)

	p= "From: " + data.from + ", To: " + data.to + ", Points:" + data.points + ", Driver: " + data.driver.username  + ", Riders: " + data.riders
	br
	p="Riders: "
	each rider, i in data.riders
		p= "Rider " + i + ": " + rider.username
		br

	
	form(method= 'POST', action='update/'+data.id)

		input.btn.btn.primary(type='submit', value='Hope on the ride bruh')

	form(method= 'POST', action='remove-rider/'+data.id)

		input.btn.btn.primary(type='submit', value='Hope off the ride bruh')


	form(method= 'POST', action='testing/'+data.id)

		input.btn.btn.primary(type='submit', value='Test')